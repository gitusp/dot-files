{
  "title": "Settings for IME",
  "rules": [
    {
      "description": "Change <c-m> to commit then enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change semicolon to IME switch",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
