{
  "title": "all",
  "rules": [
    {
      "description": "control + i to tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "c-h to delete_or_backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "c-m to return_or_enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control", "command", "option"]
            }
          },
          "to": [
            {
              "key_code": "m",
              "modifiers": ["control", "command", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Add eisuu to escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Add eisuu to c-[",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "IME switchers",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "japanese_kana"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
