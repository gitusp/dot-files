{
  "title": "all",
  "rules": [
    {
      "description": "ctrl + ; to eisuu",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    },
    {
      "description": "control + i to tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab"
            }
          ]
        }
      ]
    },
    {
      "description": "c-h to delete_or_backspace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "c-m to return_or_enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control", "command", "option"]
            }
          },
          "to": [
            {
              "key_code": "m",
              "modifiers": ["control", "command", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Add eisuu to escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Add eisuu to c-[",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl + , to toggle weznote",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "/bin/zsh -lc 'front_app=$(/usr/bin/osascript -e \"tell application \\\"System Events\\\" to bundle identifier of first application process whose frontmost is true\"); if [[ -n \"$front_app\" ]]; then printf \"%s\" \"$front_app\" > /tmp/karabiner_previous_app_bundle_id; fi; /usr/bin/osascript -e \"tell application id \\\"local.weznote\\\" to activate\"'"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^local\\.weznote$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "/bin/zsh -lc 'prev_app=\"\"; if [[ -f /tmp/karabiner_previous_app_bundle_id ]]; then prev_app=$(cat /tmp/karabiner_previous_app_bundle_id); fi; if [[ -n \"$prev_app\" ]]; then /usr/bin/osascript -e \"tell application id \\\"$prev_app\\\" to activate\"; fi'"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^local\\.weznote$"]
            }
          ]
        }
      ]
    },
    {
      "description": "IME switch",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "j",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^com\\.github\\.wez\\.wezterm$", "^com\\.mitchellh\\.ghostty$", "^net\\.kovidgoyal\\.kitty$"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "j",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.github\\.wez\\.wezterm$", "^com\\.mitchellh\\.ghostty$", "^net\\.kovidgoyal\\.kitty$"]
            },
            {
              "type": "variable_if",
              "name": "insert_mode",
              "value": true
            }
          ]
        }
      ]
    }
  ]
}
