{
  "title": "alone ctrl -> eisuu + esc",
  "rules": [
    {
      "description": "alone ctrl -> eisuu + esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "escape"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          }
        }
      ]
    }
  ]
}
