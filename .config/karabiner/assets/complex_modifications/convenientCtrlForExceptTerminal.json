{
  "title": "Convenient ctrl(^terminal)",
  "rules": [
    {
      "description": "down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^io\\.alacritty$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
