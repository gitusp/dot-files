# add cdpath
setopt AUTO_CD
cdpath=($HOME/Projects)

# Aliases
alias icat="kitty +kitten icat"
alias kdiff="kitty +kitten diff"

# functions
function play () {
	nvim --cmd 'autocmd VimEnter * Codi' ~/.playground.js
}

# functions
function rest () {
	nvim --cmd 'autocmd VimEnter * set ft=rest' ~/.rest
}
